{
  "name": "server",
  "version": "1.0.0",
  "description": "RFID Attendance Tracker",
  "main": "app.js",
  "scripts": {
    "start": "nodemon -r esm src/app.js --exec  \"npm run lint && node\"",
    "lint": "eslint src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seanmcortes/rfid-attendance-tracker.git"
  },
  "author": "GOOD++",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/seanmcortes/rfid-attendance-tracker/issues"
  },
  "homepage": "https://github.com/seanmcortes/rfid-attendance-tracker#readme",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.18.2",
    "nodemon": "^1.19.1",
    "pg-promise": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "es6": true,
      "browser": true
    },
    "rules": {
      "brace-style": [
        "error",
        "stroustrup"
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-unused-vars": [
        "warn"
      ],
      "no-var": [
        "off"
      ],
      "one-var": [
        "off"
      ],
      "linebreak-style": 0
    }
  }
}
