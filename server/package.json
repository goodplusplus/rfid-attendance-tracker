{
    "name": "server",
    "version": "1.0.0",
    "description": "GOOD++",
    "main": "index.js",
    "scripts": {
        "start": "nodemon -r esm src/app.js --exec  \"npm run lint && node\"",
        "lint": "eslint src/**/*.js"
    },
    "author": "GOOD++",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "esm": "^3.2.25",
        "express": "^4.17.1",
        "nodemon": "^1.19.1"
    },
    "devDependencies": {
        "eslint": "^6.0.1",
        "eslint-config-airbnb-base": "^13.2.0",
        "eslint-plugin-import": "^2.18.0"
    },
    "eslintConfig": {
        "extends": "airbnb-base",
        "env": {
            "es6": true,
            "browser": true
        },
        "rules": {
            "brace-style": [
                "error",
                "stroustrup"
            ],
            "comma-dangle": [
                "error",
                "never"
            ],
            "no-unused-vars": [
                "warn"
            ],
            "no-var": [
                "off"
            ],
            "one-var": [
                "off"
            ],
            "linebreak-style": 0
        }
    }
}
